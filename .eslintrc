{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "babel"
  ],
  "rules": {
    // Additional, per-project rules...
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}
